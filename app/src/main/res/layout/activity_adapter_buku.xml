<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdapterBuku">

    <TextView
        android:id="@+id/tv_kategori"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Kategori"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#004e98"
        app:layout_constraintEnd_toStartOf="@+id/ic_edit"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text View" />

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Judul"
        android:textSize="20sp"
        android:textColor="#6096ba"
        app:layout_constraintEnd_toStartOf="@+id/ic_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_kategori"
        tools:text="Text View" />

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toEndOf="@+id/tv_kategori"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>